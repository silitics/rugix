      "$id": "rugix_bakery.images.SquashfsOptions",
      "type": "object",
      "description": "",
      "properties": {
        "no-compression": {
          "type": "boolean"
        }
      },
      "required": [],
      "unevaluatedProperties": false
    },
    "rugix_bakery.images.Timestamp": {
      "$id": "rugix_bakery.images.Timestamp",
      "type": [
        "string"
      ],
      "description": "Timestamp."
    },
